---
group: Take-on
title: Search
version: 14.2.1
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/header/_macro.njk" import onsHeader %}
{% from "components/phase-banner/_macro.njk" import onsPhaseBanner %}
{% from "components/footer/_macro.njk" import onsFooter %}

{% block head %}
    <link rel="stylesheet" href="/prototypes/take-on/styles.css" />
{% endblock %}

{% block header %}
    {{
        onsHeader({
            "title": "Search",
            "logoHref": "#",
            "classes": "header--internal header--thin",
            "logo": "ons-logo-white"
        })
    }}
{% endblock %}

{% block bodyStart %}
    {{
        onsPhaseBanner({
            "badge": "BETA",
            "html": 'This is a work in progress'
        })
    }}
{% endblock %}

{% block content %}
    <form class="u-mt-m" action="/prototypes/take-on-1/search-start.html">

        {{
            onsCheckboxes({
                "legend": "Search by",
                "legendClasses": "u-fs-xl",
                "checkboxesLabel": "Select all that apply",
                "name": "search_types",
                "checkboxes": [
                    {
                        "id": "reference",
                        "label": {
                            "text": "Reference"
                        },
                        "value": "reference"
                    },
                    {
                        "id": "period",
                        "label": {
                            "text": "Period"
                        },
                        "value": "period"
                    },
                    {
                        "id": "survey",
                        "label": {
                            "text": "Survey"
                        },
                        "value": "survey"
                    },
                    {
                        "id": "receipt_date",
                        "label": {
                            "text": "Receipt date"
                        },
                        "value": "receipt_date"
                    },
                    {
                        "id": "form_type",
                        "label": {
                            "text": "Form type"
                        },
                        "value": "form_type"
                    },
                    {
                        "id": "form_id",
                        "label": {
                            "text": "Form Id"
                        },
                        "value": "form_id"
                    }
                ]
            })
        }}

        {{
            onsButton({
                "text": "Search",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}

{% block footer %}
    {{
          onsFooter()
    }}
{% endblock %}

{% block bodyEnd %}
    <script src="/prototypes/take-on/index.js"></script>
{% endblock %}
