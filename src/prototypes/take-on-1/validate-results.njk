---
title: Take-on
group: Take-on
version: 14.2.1
layout: take-on-1/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/panel/_macro.njk" import onsPanel %}

{% block main %}

    {{
        onsPanel({
            body: "<h2>Lawrence Group Ltd</h2><p>Sand and gravel 0066, March 2019</p>"
        })
    }}

    <form class="u-mt-m">

        {{
            onsInput({
                "id": "Q601",
                "label": {
                    "text": "Q601 Sand produced for asphalt (asphalting sand)",
                    "value": "240000"
                }
            })
        }}


        {{
            onsInput({
                "id": "Q146",
                "type": "number",
                "classes": "input--w-30",
                "attributes": {
                    "required": true
                },
                "label": {
                    "text": "Q146 Comment on the figures included in your return"
                },
                "value": "It was too wet to quarry so the weights are lower",
                "error": {
                        "text": "Check this"
                }
            })
        }}

        <div class="panel panel--error panel--simple">
          <div class="panel__body">
            <p class="panel__error">
              <strong>Check this</strong>
            </p>
            <p class="field">
              <label class="label" for="number">Q146 Comment on the figures included in your return</label>
              <input type="text" id="number" class="input input--text input-type__input input--w-30" value="It was too wet to quarry so the weights are lower" />
            </p>

              <span class="checkbox">
                  <input
                      type="checkbox"
                      id="password-toggle"
                      class="checkbox__input"
                      value=""
                       name="show-password"
                  >
                  <label id="password-toggle-label" class="checkbox__label " for="password-toggle">
                      Show password
                  </label>
              </span>

          </div>
        </div>

        <br>
        {{
            onsInput({
                "id": "Q147",
                "label": {
                    "text": "Q147 New pits or quarries brought into use since date of last return",
                    "value": "6"
                }
            })
        }}

        <br>
        {{
            onsButton({
                "text": 'Validate'
            })
        }}

    </form>
{% endblock %}
