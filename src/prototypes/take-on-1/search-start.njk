---
group: Take-on
title: Search
version: 0.5.0
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/header/_macro.njk" import onsHeader %}
{% from "components/phase-banner/_macro.njk" import onsPhaseBanner %}
{% from "components/footer/_macro.njk" import onsFooter %}
{% from "components/input/_macro.njk" import onsInput %}

{% block head %}
    <link rel="stylesheet" href="/prototypes/take-on/styles.css" />
{% endblock %}

{% block header %}
    {{
        onsHeader({
            "title": "Search",
            "logoHref": "#",
            "classes": "header--internal header--thin",
            "logo": "ons-logo-white"
        })
    }}
{% endblock %}

{% block bodyStart %}
    {{
        onsPhaseBanner({
            "badge": "BETA",
            "html": 'This is a work in progress'
        })
    }}
{% endblock %}

{% block content %}
    <form class="u-mt-m">

<div class="grid">
  <div class="grid__col col-3@m">
    <div class="pl-grid-col">

        {{
            onsInput({
                "id": "Reference",
                "label": {
                    "text": "Reference"
                },
                "value": "Reference",
                "classes": "input--w-10"
            })
        }}

    </div>
  </div>
  <div class="grid__col col-3@m ">
    <div class="pl-grid-col">

        {{
            onsInput({
                "id": "Period",
                "label": {
                    "text": "Period"
                },
                "value": "Period",
                "classes": "input--w-10"
            })
        }}

    </div>
  </div>
  <div class="grid__col col-3@m ">
    <div class="pl-grid-col">

        {{
            onsInput({
                "id": "Survey",
                "label": {
                    "text": "Survey"
                },
                "value": "Survey",
                "classes": "input--w-10"
            })
        }}

    </div>
  </div>
  <div class="grid__col col-3@m ">
    <div class="pl-grid-col">

        {{
            onsButton({
                "text": "Search",
                "classes": "u-mt-l"
            })
        }}

    </div>
  </div>

</div>


    </form>
{% endblock %}

{% block footer %}
    {{
          onsFooter()
    }}
{% endblock %}

{% block bodyEnd %}
    <script src="/prototypes/take-on/index.js"></script>
{% endblock %}
